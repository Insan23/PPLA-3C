<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pplagro_3c.pssi.letsplant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MenuAwal"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuPetunjuk"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuTentang"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MenuPermainan"
            android:screenOrientation="landscape" />
        <activity
            android:name=".drawer"
            android:label="@string/title_activity_drawer"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <provider
            android:name=".database.PemainProvider"
            android:authorities="com.pplagro_3c.pssi.letsplant" />
        <provider
            android:name=".database.LahanProvider"
            android:authorities="com.pplagro_3c.pssi.letsplant" />
        <provider
            android:name=".database.TanamanProvider"
            android:authorities="com.pplagro_3c.pssi.letsplant" />
    </application>

</manifest>
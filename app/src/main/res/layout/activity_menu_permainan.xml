<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPermainan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_lahan_pagi" />

    <ImageView
        android:id="@+id/petani"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/petani" />

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:layout_above="@+id/petani"
        android:layout_toStartOf="@+id/tombolPengaturan"
        android:background="@drawable/dialog_input_nama">

        <TextView
            android:id="@+id/teks1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="Hai, Selamat Datang Di"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks1"
            android:layout_centerHorizontal="true"
            android:text="Let's Plant"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teks3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Masukkan Namamu :"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputNama"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks3"
            android:layout_centerHorizontal="true"
            android:maxLength="5"
            android:hint="Namamu"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teksError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/inputNama"
            android:layout_below="@+id/inputNama"
            android:layout_marginLeft="4dp"
            android:textColor="@color/error"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/teks2"
            android:layout_below="@+id/inputNama"
            android:layout_marginTop="18dp"
            android:text="SIMPAN"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:text="BATAL"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relKamu"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/tombolKamu"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:src="@drawable/bg_menu_bawah" />

        <TextView
            android:id="@+id/teksKamu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Kamu"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relInventaris"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/relKamu">

        <ImageView
            android:id="@+id/tombolInventaris"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:src="@drawable/bg_menu_bawah" />

        <TextView
            android:id="@+id/teksInventaris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Inventaris"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relToko"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/relInventaris">

        <ImageView
            android:id="@+id/tombolToko"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_menu_bawah" />

        <TextView
            android:id="@+id/teksToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Toko"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/tombolPengaturan"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/aset_pengaturan" />

    <LinearLayout
        android:layout_width="176dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/tombolPengaturan"
        android:layout_marginBottom="4dp"
        android:layout_toLeftOf="@id/tombolPengaturan"
        android:background="@drawable/bg_pengaturan">

        <ImageView
            android:id="@+id/tombolHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/tombolSuara"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_suara_off" />

        <ImageView
            android:id="@+id/tombolMusik"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_musik_off" />

        <ImageView
            android:id="@+id/tombolKeluar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_keluar" />

    </LinearLayout>

</RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l_1_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l_2_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l_3_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l_4_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l_5_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_lahan_polybag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_lahan_pagi" />

            <RelativeLayout
                android:id="@+id/kosongan2"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/p_baris1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/kosongan1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/p_1_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/p_2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/p_3_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/p_4_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
